{
  "name": "Global-Forest-Watch-Commodities",
  "version": "2.0.0",
  "homepage": "http://commodities.globalforestwatch.org/",
  "scripts": {
    "start": "npm run jsx:watch & npm run stylus:watch",
    "build": "rm -rf build && npm run jsx:build && grunt build && npm run stylus:build && npm run optimize",
    "jsx:watch": "node_modules/react-tools/bin/jsx src/app/js/components src/app/js/components --watch --harmony --extension jsx",
    "jsx:build": "node_modules/react-tools/bin/jsx src/app/js/components src/app/js/components --harmony --extension jsx",
    "stylus:watch": "node_modules/stylus/bin/stylus src/app/css/app.styl -l --watch & node_modules/stylus/bin/stylus src/app/css/report.styl -l --watch",
    "stylus:build": "mkdir -p build/app/css && node_modules/stylus/bin/stylus src/app/css/app.styl -o build/app/css --compress & node_modules/stylus/bin/stylus src/app/css/report.styl -o build/app/css --compress",
    "optimize": "node_modules/requirejs/bin/r.js -o app.build.js",
    "todos": "grep TODO: src -r --exclude-dir .module-cache --exclude-dir libs"
  },
  "author": [
    "BlueRaster",
    "GlobalForestWatch"
  ],
  "devDependencies": {
    "grunt-favicons": "^0.6.4"
  },
  "dependencies": {
    "grunt": "^0.4.5",
    "grunt-contrib-copy": "^0.5.0",
    "grunt-contrib-htmlmin": "^0.3.0",
    "grunt-contrib-imagemin": "^0.3.0",
    "grunt-contrib-uglify": "^0.5.0",
    "grunt-ftp-push": "^0.2.4",
    "react-tools": "^0.11.1",
    "requirejs": "^2.1.17",
    "stylus": "^0.51.1"
  }
}
