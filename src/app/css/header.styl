// Useful Functions
border-radius()
	border-radius arguments
	-moz-border-radius arguments
	-webkit-border-radius arguments

baseLightGray = #e6e6e6
mediumGray = #888
darkGray = #444
darkFont = #333
separatorGray = #CFCFCF
navBottomBorder = #9b9b9b
orangeHover = rgba(233, 131, 0, 0.45)
orangeSelected = rgb(233, 131, 0)

/* Layer Filter Colors */
forestChange = #e72698
forestCover = #B2D26E
forestUse = #C98E6C
conservation = #3182BD
agroSuit = #fdb22c
company = #5e138a
/* Layer Filter Colors */


.gfw .app-header
	background url('images/header_tree_background') repeat-x scroll center top transparent
	border-bottom 1px solid #717d80
	border-top 5px solid darkGray
	box-sizing border-box
	height 210px

.gfw .header
	height 100%
	width 100%

.gfw .header .inner
	margin 0 auto
	width 960px

.gfw .header .outer
	margin 0 30px

.gfw .nav-topper
	font-family "Helvetica Neue",Helvetica,Arial,sans-serif
	border-bottom 1px solid navBottomBorder
	background baseLightGray
	font-size 12px
	height 43px
	width 100%

.gfw .app-header.mapView
	height 120px

.gfw .app-header.generalView
	height 105px

.gfw .app-header .map-layer-controls
	display none

.gfw .app-header.mapView .nav-topper, 
.gfw .app-header.mapView .header-title, 
.gfw .app-header.generalView .header-title
	display none

.gfw .app-header.mapView .nav-separator
	top 65px

.gfw .app-header.generalView .nav-separator
	display none

.gfw .app-header.mapView .map-layer-controls
	position absolute
	display block
	right 40px
	top 65px

.gfw .app-header .map-layer-controls ul
	display inline-block
	list-style-type none

.gfw .app-header .layer-list-header,
.gfw .app-header .filter-list-title
	font-family "Helvetica Neue",Helvetica,Arial,sans-serif
	text-transform uppercase
	display inline-block
	font-weight bold
	font-size 12px
	// cursor pointer
	margin 0 3px

.gfw .app-header .layer-list-header
	opacity 0

.gfw .app-header .layer-list-header a
	padding 0 5px

.gfw .app-header.mapView .layer-line
	margin-top 13px
	padding 0 1px
	width 100%
	height 4px

.gfw .app-header #master-layer-list
	background-color white
	border-radius(2px)
	position absolute
	width 180px
	z-index 500
	opacity 0
	top 65px

.gfw .app-header .filter-list-title
	text-align center
	margin 15px auto
	display block

.gfw .app-header .layer-list-item.hidden
	display none

.gfw .app-header .filter-list
	font-family "Helvetica Neue",Helvetica,Arial,sans-serif
	list-style-type none
	font-size 13px
	padding 0
	margin 0

.gfw .app-header .filter-list .layer-sub-title
	font-size 10px
	margin 3px

.gfw .app-header .filter-list .layer-title,
.gfw .app-header .filter-list .layer-sub-title
	color mediumGray

.gfw .app-header .filter-list > li
	border-bottom 1px solid baseLightGray
	cursor pointer
	padding 5px

/* Layer Controls Colors */
.gfw .app-header.mapView .forest-change,
.gfw .app-header.mapView .forest-change.active > a
	color forestChange

.gfw .app-header.mapView .forest-cover,
.gfw .app-header.mapView .forest-cover.active > a
	color forestCover

.gfw .app-header.mapView .forest-use,
.gfw .app-header.mapView .forest-use.active > a
	color forestUse

.gfw .app-header.mapView .conservation,
.gfw .app-header.mapView .conservation.active > a
	color conservation

.gfw .app-header.mapView .agro-suitability,
.gfw .app-header.mapView .agro-suitability.active > a
	color agroSuit

.gfw .app-header.mapView .company-pages,
.gfw .app-header.mapView .company-pages.active > a
	color company

.gfw .app-header.mapView .forest-change .layer-line
	background forestChange

.gfw .app-header.mapView .forest-cover .layer-line
	background forestCover

.gfw .app-header.mapView .forest-use .layer-line
	background forestUse

.gfw .app-header.mapView .conservation .layer-line
	background conservation

.gfw .app-header.mapView .agro-suitability .layer-line
	background agroSuit

.gfw .app-header.mapView .company-pages .layer-line
	background company

/* Layer Controls Colors */
.gfw .nav-topper div
	line-height 43px

.gfw .nav-separator
	border-bottom 1px solid separatorGray
	display inline-block
	position absolute
	width 100%
	top 106px
	left 0

.gfw .header-logo
	background url('images/gfwc_logo.jpg') no-repeat center
	background-position 0 0
	text-indent -999999px
	display inline-block
	position relative
	height 100px
	width 90px
	z-index 200

.gfw .beta-logo
	font-family Arial, sans-serif
	border-radius(5px)
	background mediumGray
	position relative
	font-size 11px
	color white
	padding 8px
	top 20px

.gfw .nav-link-list
	display inline-block
	list-style-type none
	float right

.gfw .nav-link-list .nav-link
	border-radius(5px)
	font-family Arial, sans-serif
	display inline-block
	font-weight bold
	padding 6px 8px
	font-size 12px
	color darkFont
	margin 0 2px

.gfw .nav-link-list .nav-link:not(.selected)
	cursor pointer

.gfw .nav-link-list .nav-link:hover
	background-color orangeHover

.gfw .nav-link-list .nav-link.selected
	background-color orangeSelected
	cursor default
	color white

.gfw .header-title
	font-family Georgia, serif
	font-size 26px