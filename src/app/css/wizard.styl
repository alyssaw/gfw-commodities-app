// Useful Functions
border-radius()
	border-radius arguments
	-moz-border-radius arguments
	-webkit-border-radius arguments

top-border-radius()
	-webkit-border-top-right-radius arguments
	-webkit-border-top-left-radius arguments
	-moz-border-radius topright arguments
	-moz-border-radius topleft arguments
	border-top-right-radius arguments
	border-top-left-radius arguments

lightGray = #ececed
mediumGray = #888
goldFont = #f0ab00
greyBorder = #b2b2b2
hoverBackground = #CDCDCD
orangeSelected = rgb(233, 131, 0)
orangeHover = rgba(233, 131, 0, 0.45)
wizardBlue = #00688B

.gfw .wizard-container
	background-color #fff
	position absolute
	z-index 5
	bottom 0
	left 0
	top 0

.gfw .wizard-tab
	background url('images/analysis_symbol_white.png') no-repeat 7px center
	font-family Arial, sans-serif
	background-color orangeSelected
	padding 8px 7px 5px 25px
	background-size 13px
	border-radius(5px)
	position absolute
	font-size 16px
	cursor pointer
	color #fff
	left 20px
	top 20px
	z-index 50

.gfw .wizard, .gfw .wizard .wizard-root
	height 100%
	width 100%

.gfw .wizard-header
	position absolute
	height 95px
	right 0
	left 0
	top 0

.gfw .wizard-body
	position absolute
	top 95px
	bottom 0
	right 0
	left 0

.gfw .wizard-body .step
	position absolute
	bottom 0
	right 0
	left 0
	top 0

.gfw .step .step-body
	padding-left 10px
	position absolute
	overflow-y auto
	bottom 50px
	right 0
	left 0
	top 0
	
.gfw .step .step-footer
	border-top 1px solid greyBorder
	position absolute
	height 50px
	bottom 0
	right 0
	left 0

.gfw .wizard-body select,
.gfw .admin-unit input[type='text'],
.gfw .certified-area input[type='text'],
.gfw .commercial-entity input[type='text'],
.gfw .mill-point input[type='text']
	box-sizing border-box
	margin-left 1px
	font-size 16px
	width 300px

.gfw .wizard-body > div
	overflow-y auto
	height 100%

.gfw .wizard-header .title-section
	border-bottom 1px solid greyBorder
	line-height 50px
	height 50px

.gfw .wizard-header .title
	background url('images/analysis_symbol_black.png') no-repeat left center
	padding-left 30px
	margin-left 10px
	font-size 26px

.gfw .wizard-header .button
	border-left 1px solid greyBorder
	position absolute
	cursor pointer

.gfw .wizard-header .button.close
	background url('images/close_symbol.png') no-repeat center
	height 50px
	width 40px
	right 0
	
.gfw .wizard-header .button.reset
	background url('images/reset_symbol.png') no-repeat 10px center
	padding-left 35px
	color greyBorder
	width 60px
	right 40px

.gfw .wizard-header .breadcrumbs
	padding 10px
	clear both

.gfw .wizard-header .breadcrumbs .active
	color #000

.gfw .wizard-header .breadcrumbs .enabled
	cursor pointer
	color goldFont

.gfw .wizard-header .breadcrumbs .carat
	color #000

.gfw .wizard-header .breadcrumbs,
.gfw .wizard-header .breadcrumbs span:not(.enabled) .carat
	color lightGray
	font-size 20px

.gfw .wizard-body .hidden,
.gfw .wizard-body .loading-wheel.hidden
	display none

.gfw .wizard-body .step-title
	font-size 24px

.gfw .wizard-body .step-description
	margin 15px 5px

.gfw .wizard-body .s1-radio-container
	font-size 18px
	margin 10px

.gfw .s1-radio-container label
	padding-left 10px

.gfw .step .step-one-main-description
	font-size 14px
	margin 2px 0

.gfw .step .step-one-option-description
	margin 2px 25px
	font-size 13px

.gfw .wizard-body .next-button-container
	background-color orangeSelected
	position absolute
	text-align center
	cursor pointer
	font-size 20px
	height 50px
	width 120px
	right 0

.gfw .select-analysis .next-button-container
	width 160px

.gfw .wizard-body .next-button-container.disabled
	background-color mediumGray
