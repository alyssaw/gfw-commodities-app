.gfw .step .instructions
	margin 5px 0 8px

.gfw .step .selected-analysis-area
	position absolute
	right 120px
	left 0

.gfw .select-analysis .selected-analysis-area
	right 160px

.gfw .step .current-selection-label
	position absolute
	line-height 50px
	font-size 18px
	width 150px
	left 5px

.gfw .step .current-selection
	text-overflow ellipsis
	white-space nowrap
	position absolute
	line-height 50px
