.gfw #app-body #homeView {
	height auto !important
}

.gfw #app-body .background-container {
	margin-top -700px
	overflow hidden
	height 100%
	width 100%
}

.gfw #app-body .background-container img {
	height auto
	width 100%
}

.homeBgContainer {
	width 100%
    height 100%
    overflow hidden
}

.homeBgContainer img {
    width 100%
    height auto
}

.homeModeDotsContainer {
    margin-top: 1070px;
    position: absolute;
    width: 300px;
    height: 30px;
    align: center;
    background-color: #f00;
    left: 50%;
    margin-left: -150px;
}

.homeModeOptionsContainer {
    margin-top 700px
    position absolute
    width 100%
    height 100%
}

.homeModeOptionsViewerOuter {
    width 300px
    height 300px
    z-index 100
    //overflow hidden
    overflow-x auto
    overflow-y hidden
    margin auto
    margin-top 50px
    overflow visible
}

.homeModeOuter {
    width 300px
    height 30px
    z-index 100
    //overflow hidden
    overflow-x auto
    overflow-y hidden
    margin auto
    overflow visible
}

.homeModeDot {
    height 30px
    width 30px
    margin-left 10px
    margin-right 10px
    display inline-block
    color gray
    transition all 2s
}

.homeModeDot.activeDot {
    color green
}

.homeModeOptionsViewerOuter .modeGroup {
    height 300px
    width 100%
    transition display 1.5s ease
    cursor pointer
    font-size 20px
}


.homeModeOptionsViewerOuter .modeOption {
    border-radius 150px
    background-color #000
    color #FFF
    height 300px
    width 300px
    vertical-align middle
    text-align center
    position absolute
    //display inline-block
    margin auto
    opacity 0.3
    box-sizing border-box
}

.homeModeOptionsViewerOuter .modeOptionRing {
    border-radius 150px
    background none
    height 300px
    box-shadow 0px 0px 14px 0px #888888
    width 300px
    vertical-align middle
    text-align center
    position absolute
    //display inline-block
    margin auto
    //border 10px solid #EC1D38
    border 10px solid #E98300
    box-sizing border-box
}

.homeModeOptionsViewerOuter .modeGroup .modeText p {
    font-size 72px
    color #EC1D38
    margin-top -50px
    margin-bottom 0px
}

.homeModeOptionsViewerOuter .modeGroup .modeText {
    font-family "Georgia",serif
    color #CCC
    position absolute
    left 0px
    top 110px
    right 0px
    vertical-align middle
}

.homeModeOptionsViewerOuter .modeGroup .modeText span {
    font-size 32px
}

.homeModeOptionsViewerOuter .modeGroup .modeText span.more-text {
    position relative
    top -1px
}
.homeModeOptionsViewerOuter .modeGroup .modeText span.less-text {
    position relative
    top 10px
}

#signUpAlertsForm {
    font-family "Arial MT Condensed Light"
    src url("../fonts/ArialMTStd-LightCond.otf") format("opentype")
    color #464052
}

#signUpAlertsForm .select-container {
    background url('../images/ico-carat-down.png') no-repeat 95% center transparent
    width 240px
}

#signUpAlertsForm #aoiDistrictPicker {
    background transparent
    -webkit-appearance none
    -moz-appearance none
    appearance none
    font-size 14px
    padding 5px
    height 30px
    width 240px
}

#signUpAlertsForm #aoiSubDistrictPicker {
    border 1px solid #BBB
    border-radius 5px
    font-size 12px
    width 240px
}

#signUpAlertsForm input[type="email"], #signUpAlertsForm input[type="tel"] {
    border-radius 5px
    font-size 16px
    width 235px
    height 30px
}

#signUpAlertsForm #verifyEmailForAlerts {
    font-size 12px
    display none
}

#alerts-submit-button {
    background #e50036
    padding 5px 10px
    cursor pointer
    font-size 14px
    color white
    border none
}

#signUpAlertsForm td {
    padding 2px 6px
}

#signUpAlertsForm .error-messages {
	color #e50036
}
